<h1 class="h3 mb-3 font-normal">Please sign in</h1>
<label for="username">Email</label>
<input
  type="email"
  value="{{ last_username }}"
  name="_username"
  id="username"
  class="form-control"
  autocomplete="email"
  required
  autofocus
/>
<label for="password">Password</label>
<input
  type="password"
  name="_password"
  id="password"
  class="form-control"
  autocomplete="current-password"
  required
/>

<input
  type="hidden"
  name="_csrf_token"
  value="{{ csrf_token('authenticate') }}"
/>
