  <span
    class="text-red-600 bg-red-200 px-1 cursor-pointer select-none"
    hx-trigger="click"
    hx-delete="/messages/{{ message.id }}"
    hx-target="#message-{{ message.id }}"
    >x</span
  >
</li>
